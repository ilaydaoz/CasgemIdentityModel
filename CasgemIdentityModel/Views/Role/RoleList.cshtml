@model List<CasgemIdentityModel.Dal.AppRole>
@{
    Layout = null;
    int count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br />
    <br />
    <table class=" table table-bordered">
        <tr>
            <th>#</th>
            <th>Rol Adı </th>
            <th>Sil </th>
            <th>Güncelle </th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td><a href="/Role/DeleteRole/@item.Id" class="btn btn-danger"> Sil</a></td>
                <td><a href="/Role/UpdateRole/@item.Id" class="btn btn-success"> Rol Güncelle</a></td>
            </tr>
            
        }
    </table>

</div>
